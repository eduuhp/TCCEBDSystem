@model prjEBDSystem.Models.Frequency

@{
    ViewBag.Title = "Nova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nova Chamada</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chamada</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DateFrequency, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DateFrequency, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateFrequency, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        @foreach (var item in Model.Users)
        {
            <div class="form-group">
                @Html.Label(item.FirstNameUser + " " + item.LastNameUser, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="checkbox" @item.Checked name="ids" value="@item.IdUser" />
                </div>
            </div>
        }
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.RelatoryClass.VisitorsRelatoryClass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RelatoryClass.VisitorsRelatoryClass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RelatoryClass.VisitorsRelatoryClass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RelatoryClass.TotalBiblesRelatoryClass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RelatoryClass.TotalBiblesRelatoryClass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RelatoryClass.TotalBiblesRelatoryClass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RelatoryClass.TotalMagazinesRelatoryClass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RelatoryClass.TotalMagazinesRelatoryClass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RelatoryClass.TotalMagazinesRelatoryClass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RelatoryClass.TotalOffersRelatoryClass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RelatoryClass.TotalOffersRelatoryClass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RelatoryClass.TotalOffersRelatoryClass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancelar", "Index", "Frequency", new { @type = "button", @class = "btn btn-default" })
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
